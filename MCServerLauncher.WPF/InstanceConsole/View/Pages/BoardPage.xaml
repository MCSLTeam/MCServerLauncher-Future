<Page x:Class="MCServerLauncher.WPF.InstanceConsole.View.Pages.BoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:vc="clr-namespace:MCServerLauncher.WPF.InstanceConsole.View.Components"
      xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="35,0,35,0">
        <ui:ScrollViewerEx>
            <ikw:SimpleStackPanel Spacing="10">
                <vc:InstancePerformance x:Name="PerformanceComponent" Margin="0,15,0,0" />
                <vc:DaemonConnectionInfo x:Name="ConnectionInfoComponent" />
                <vc:MinecraftInstanceAddress x:Name="AddressComponent" />
                <vc:MinecraftInstancePlayerList x:Name="PlayerListComponent" Margin="0,0,0,35" />
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
    </Grid>
</Page>