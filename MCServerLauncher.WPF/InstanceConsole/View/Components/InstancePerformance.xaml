<UserControl x:Class="MCServerLauncher.WPF.InstanceConsole.View.Components.InstancePerformance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Memory Usage -->
        <Border Grid.Row="0" Style="{StaticResource StyledBorder}" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Margin="15,15,15,12" Grid.Column="0" Grid.Row="0" 
                           Text="{Binding [ConsoleBoard_Universal_RAM], Source={x:Static i18n:Lang.Tr}}"
                           VerticalAlignment="Top" />
                <TextBlock Margin="15,15,15,12" Grid.Column="1" Grid.Row="0" 
                           x:Name="MemoryStatusTextBlock"
                           Text="0 MB / 0 MB" 
                           TextAlignment="Right" />
                <ui:ProgressBar Grid.ColumnSpan="2" Grid.Row="1" 
                                x:Name="MemoryStatusProgressBar"
                                Value="0"
                                VerticalAlignment="Bottom" />
            </Grid>
        </Border>

        <!-- CPU Usage -->
        <Border Grid.Row="1" Style="{StaticResource StyledBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Margin="15,15,15,12" Grid.Column="0" Grid.Row="0" 
                           Text="{Binding [ConsoleBoard_Universal_CPU], Source={x:Static i18n:Lang.Tr}}"
                           VerticalAlignment="Top" />
                <TextBlock Margin="15,15,15,12" Grid.Column="1" Grid.Row="0" 
                           x:Name="CPUStatusTextBlock"
                           Text="0 %" 
                           TextAlignment="Right" />
                <ui:ProgressBar Grid.ColumnSpan="2" Grid.Row="1" 
                                x:Name="CPUStatusProgressBar"
                                Value="0"
                                VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
