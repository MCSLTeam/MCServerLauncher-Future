<UserControl x:Class="MCServerLauncher.WPF.InstanceConsole.View.Components.DaemonConnectionInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="800">

    <Border Style="{StaticResource StyledBorder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="15,15,15,15" Grid.Column="0" 
                       Text="{Binding [ConsoleBoard_Universal_WebSocketLatency], Source={x:Static i18n:Lang.Tr}}"
                       VerticalAlignment="Center" />
            <TextBlock Margin="15,15,15,15" Grid.Column="1" 
                       x:Name="WebSocketPingStatusTextBlock"
                       Text="-- ms" 
                       TextAlignment="Right" 
                       VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
