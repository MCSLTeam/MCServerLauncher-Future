<Page x:Class="MCServerLauncher.WPF.View.FirstSetupHelper.EulaSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EulaSetupPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Margin="40,40,40,0" Grid.Row="0" Style="{StaticResource TitleTextBlock}" Text="{Binding [FirstSetup_EulaMenu], Source={x:Static i18n:Lang.Tr}}"
                   HorizontalAlignment="Left" />
        <ui:ScrollViewerEx Grid.Row="1" Margin="40,20,40,0" x:Name="EulaScrollViewer">
            <ikw:SimpleStackPanel>
                <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula1], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula2], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Text="{Binding [Eula3], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula4], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula5], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula6], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula7], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula8], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula9], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula10], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula11], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula12], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula13], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula14], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula15], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula16], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula17], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,0" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource SubtitleTextBlock}" Text="{Binding [Eula18], Source={x:Static i18n:Lang.Tr}}" />
                <TextBlock Margin="0,10,0,20" TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow"
                           Style="{StaticResource BodyTextBlock}"
                           Text="{Binding [Eula19], Source={x:Static i18n:Lang.Tr}}" />
            </ikw:SimpleStackPanel>
        </ui:ScrollViewerEx>
        <Border Grid.Row="2" Style="{StaticResource StyledBorder}" Height="80">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" HorizontalAlignment="Left" Margin="40,0,0,0" Click="RefuseEula">
                    <Button.Content>
                        <ui:IconAndText IsTabStop="False" Icon="{x:Static ui:SegoeFluentIcons.Cancel}" Content="{Binding [Disagree], Source={x:Static i18n:Lang.Tr}}" />
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,40,0" Click="AcceptEula"
                        Style="{StaticResource AccentButtonStyle}">
                    <Button.Content>
                        <ui:IconAndText IsTabStop="False" Icon="{x:Static ui:SegoeFluentIcons.Accept}" Content="{Binding [Agree], Source={x:Static i18n:Lang.Tr}}" />
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>