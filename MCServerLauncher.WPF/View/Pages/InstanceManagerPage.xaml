<ui:Page x:Class="MCServerLauncher.WPF.View.Pages.InstanceManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:im="clr-namespace:MCServerLauncher.WPF.View.Components.InstanceManager"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstanceManagerPage">

    <Grid Margin="35,35,35,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource TitleTextBlock}" 
                   Text="{Binding [Main_InstanceManagerNavMenu], Source={x:Static i18n:Lang.Tr}}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="1" Style="{StaticResource MinititleTextBlock}" 
                   Text="{Binding [InstanceManagerTip], Source={x:Static i18n:Lang.Tr}}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0" MinWidth="130" Margin="0,0,10,0" x:Name="DaemonFilter" ui:ControlHelper.PlaceholderText="{Binding [AllDaemon], Source={x:Static i18n:Lang.Tr}}"
                      VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <ComboBox Grid.Column="1" MinWidth="80" x:Name="RunningStatusFilter" ui:ControlHelper.PlaceholderText="{Binding [AllRunningStatus], Source={x:Static i18n:Lang.Tr}}"
                      VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBox Grid.Column="3" MaxWidth="400" MinWidth="120" Margin="0,0,10,0" ui:ControlHelper.PlaceholderText="{Binding [Search], Source={x:Static i18n:Lang.Tr}}" />
            <Button Grid.Column="4" Height="32">
                <Button.Content>
                    <ui:IconAndText IsTabStop="False" Icon="{x:Static ui:SegoeFluentIcons.UpdateRestore}" 
                                    Content="{Binding [Refresh], Source={x:Static i18n:Lang.Tr}}" />
                </Button.Content>
            </Button>
        </Grid>
        <ui:ScrollViewerEx Grid.Row="3" Margin="0,15,0,0">
            <ui:GridView x:Name="InstanceCardGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" IsSelectionEnabled="False" Width="Auto" Padding="0,0,0,15" />
        </ui:ScrollViewerEx>
    </Grid>
</ui:Page>