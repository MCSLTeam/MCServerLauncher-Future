<ui:Page x:Class="MCServerLauncher.WPF.View.Pages.InstanceManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:im="clr-namespace:MCServerLauncher.WPF.View.Components.InstanceManager"
      xmlns:ge="clr-namespace:MCServerLauncher.WPF.View.Components.Generic"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstanceManagerPage">

    <Grid Margin="35,35,35,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource TitleTextBlock}" 
                   Text="{Binding [Main_InstanceManagerNavMenu], Source={x:Static i18n:Lang.Tr}}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="1" Style="{StaticResource MinititleTextBlock}" 
                   Text="{Binding [InstanceManagerTip], Source={x:Static i18n:Lang.Tr}}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0" MinWidth="70" MaxWidth="150" Margin="0,0,10,0" x:Name="DaemonFilter"
                      VerticalAlignment="Top" HorizontalAlignment="Left" SelectionChanged="DaemonFilterChanged" ItemsSource="{Binding DaemonFilterItems}"/>
            <ComboBox Grid.Column="1" Width="120" x:Name="RunningStatusFilter"
                      VerticalAlignment="Top" HorizontalAlignment="Left">
                <ComboBoxItem Tag="All" IsSelected="True" Content="{Binding [AllRunningStatus], Source={x:Static i18n:Lang.Tr}}" />
                <ComboBoxItem Tag="Starting" Content="{Binding [Starting], Source={x:Static i18n:Lang.Tr}}" />
                <ComboBoxItem Tag="Running" Content="{Binding [Running], Source={x:Static i18n:Lang.Tr}}" />
                <ComboBoxItem Tag="Stopping" Content="{Binding [Stopping], Source={x:Static i18n:Lang.Tr}}" />
                <ComboBoxItem Tag="Stopped" Content="{Binding [Stopped], Source={x:Static i18n:Lang.Tr}}" />
                <ComboBoxItem Tag="Crashed" Content="{Binding [Crashed], Source={x:Static i18n:Lang.Tr}}" />
            </ComboBox>
            <TextBox Grid.Column="3" MaxWidth="400" MinWidth="120" Margin="0,0,10,0" ui:ControlHelper.PlaceholderText="{Binding [Search], Source={x:Static i18n:Lang.Tr}}" />
            <Button Grid.Column="4" Height="32" x:Name="RefreshButton" Click="RefreshButton_Click">
                <Button.Content>
                    <ui:IconAndText IsTabStop="False" Icon="{x:Static ui:SegoeFluentIcons.UpdateRestore}" 
                                    Content="{Binding [Refresh], Source={x:Static i18n:Lang.Tr}}" />
                </Button.Content>
            </Button>
        </Grid>
        <ui:ScrollViewerEx Grid.Row="3" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ge:LoadingLayer Grid.Row="0" Grid.Column="0" x:Name="LoadingLayer" />
                <ui:GridView Grid.Row="0" Grid.Column="0" x:Name="InstanceCardGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" IsSelectionEnabled="False" Width="Auto" Padding="0,0,0,15" />
            </Grid>
        </ui:ScrollViewerEx>
    </Grid>
</ui:Page>