<ui:Page x:Class="MCServerLauncher.WPF.View.Pages.CreateInstancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateInstancePage">
    <Grid Margin="35,35,35,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource TitleTextBlock}" 
                   Text="{Binding [Main_CreateInstanceNavMenu], Source={x:Static i18n:Lang.Tr}}" 
                   VerticalAlignment="Top" HorizontalAlignment="Left" />
        <ui:Frame Grid.Row="1" x:Name="CurrentCreateInstance" Margin="0,15,0,35" />
    </Grid>
</ui:Page>