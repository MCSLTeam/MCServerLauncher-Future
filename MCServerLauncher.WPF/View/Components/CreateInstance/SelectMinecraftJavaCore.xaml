<UserControl x:Class="MCServerLauncher.WPF.View.Components.CreateInstance.SelectMinecraftJavaCore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d"
             d:DesignHeight="160" d:DesignWidth="800">
    <Border Style="{StaticResource StyledBorder}" Margin="0,0,0,0">
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="20,15,0,0"
                       Style="{StaticResource SubtitleTextBlock}" Text="{Binding [CreateInstance_SelectMinecraftJavaCore_Title], Source={x:Static i18n:LanguageManager.Localize}}"
                       VerticalAlignment="Top" HorizontalAlignment="Left" />
            <ui:FontIcon Grid.Row="0" Grid.Column="1" Margin="5,20,0,0" x:Name="StatusShow"
                         Icon="{x:Static ui:SegoeFluentIcons.Accept}" FontSize="16"
                         VerticalAlignment="Top" HorizontalAlignment="Left" />
            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,0,20,0"
                       Style="{StaticResource BodyTextBlock}" Text="{Binding [CreateInstance_SelectMinecraftJavaCore_Description], Source={x:Static i18n:LanguageManager.Localize}}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" HorizontalAlignment="Left" />
            <TextBox x:Name="CoreTextBox" ScrollViewer.VerticalScrollBarVisibility="Disabled" IsEnabled="False" Grid.Row="2"
                     Grid.Column="0" Grid.ColumnSpan="2" Margin="20,15,10,20" ui:ControlHelper.PlaceholderText="{Binding [MinecraftCoreFileName], Source={x:Static i18n:LanguageManager.Localize}}" />
            <Button Height="32" Margin="0,15,20,0" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top"
                    HorizontalAlignment="Right" Content="{Binding [Browse], Source={x:Static i18n:LanguageManager.Localize}}" />

            <ui:DropDownButton ShowChevronArrow="False" Grid.Row="0" Grid.Column="2"
                               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,20,0">
                <ui:DropDownButton.Content>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Go}" FontSize="16" />
                </ui:DropDownButton.Content>
            </ui:DropDownButton>
        </Grid>
    </Border>
</UserControl>