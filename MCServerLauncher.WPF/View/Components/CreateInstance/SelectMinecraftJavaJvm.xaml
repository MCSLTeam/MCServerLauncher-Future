<UserControl x:Class="MCServerLauncher.WPF.View.Components.CreateInstance.SelectMinecraftJavaJvm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource StyledBorder}" Margin="0,15,0,0">
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,15,0,0"
                       Style="{StaticResource SubtitleTextBlock}" Text="{Binding [CreateInstance_SelectMinecraftJavaJvm_Title], Source={x:Static i18n:LanguageManager.Localize}}" VerticalAlignment="Top"
                       HorizontalAlignment="Left" />
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="20,0,0,0"
                       Style="{StaticResource BodyTextBlock}"
                       Text="{Binding [CreateInstance_SelectMinecraftJavaJvm_Description], Source={x:Static i18n:LanguageManager.Localize}}" TextWrapping="Wrap"
                       VerticalAlignment="Top" HorizontalAlignment="Left" />
            <TextBox x:Name="JavaRuntimeTextBox" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Row="2"
                     Grid.Column="0" Margin="20,15,10,20" ui:ControlHelper.PlaceholderText="{Binding [CreateInstance_SelectMinecraftJavaJvm_Title], Source={x:Static i18n:LanguageManager.Localize}}" />
            <ui:DropDownButton ShowChevronArrow="False" Height="32" Margin="0,15,20,0" Grid.Row="2"
                               Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right">
                <ui:DropDownButton.Content>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.More}" FontSize="16" />
                </ui:DropDownButton.Content>
                <ui:DropDownButton.Flyout>
                    <ui:MenuFlyout Placement="Bottom">
                        <MenuItem Header="{Binding [SelectManually], Source={x:Static i18n:LanguageManager.Localize}}">
                            <MenuItem.Icon>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.OpenFile}" FontSize="16" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{Binding [ScanJavaAtDaemon], Source={x:Static i18n:LanguageManager.Localize}}">
                            <MenuItem.Icon>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.SearchAndApps}"
                                             FontSize="16" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{Binding [SelectFromResult], Source={x:Static i18n:LanguageManager.Localize}}">
                            <MenuItem.Icon>
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.SelectAll}" FontSize="16" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ui:MenuFlyout>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
            <ui:DropDownButton Grid.Row="0" Grid.Column="1" ShowChevronArrow="False"
                               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,20,0">
                <ui:DropDownButton.Content>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Help}" FontSize="16" />
                </ui:DropDownButton.Content>
                <ui:DropDownButton.Flyout>
                    <ui:Flyout Placement="TopEdgeAlignedRight">
                        <TextBlock TextWrapping="Wrap"
                                   Text="{Binding [MinecraftJavaRequirementTip], Source={x:Static i18n:LanguageManager.Localize}}" />
                    </ui:Flyout>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
        </Grid>
    </Border>
</UserControl>