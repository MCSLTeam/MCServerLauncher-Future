<UserControl x:Class="MCServerLauncher.WPF.View.Components.ResDownloadItem.RainYunResCoreVersionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="800">
    <Border Height="85" Margin="0,0,0,10" Style="{StaticResource StyledBorder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Margin="20,16,5,5" Grid.Column="0" Grid.Row="0" Text="{Binding [FileName], StringFormat={}：, Source={x:Static i18n:Lang.Tr}}"
                           Style="{StaticResource MinititleTextBlock}" HorizontalAlignment="Left" />
                <TextBlock Margin="20,5,5,10" Grid.Column="0" Grid.Row="1" Text="{Binding [FileSize], StringFormat={}：, Source={x:Static i18n:Lang.Tr}}"
                           Style="{StaticResource MinititleTextBlock}" HorizontalAlignment="Left" />
                <TextBlock Margin="20,16,5,5" Grid.Column="1" Grid.Row="0" x:Name="FileNameReplacer"
                           Style="{StaticResource MinititleTextBlock}" HorizontalAlignment="Left"
                           TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" />
                <TextBlock Margin="20,5,5,10" Grid.Column="1" Grid.Row="1" x:Name="FileSizeReplacer"
                           Style="{StaticResource MinititleTextBlock}" HorizontalAlignment="Left"
                           TextTrimming="CharacterEllipsis" TextWrapping="WrapWithOverflow" />
            </Grid>
            <Button Height="50" Width="50" Margin="15,15,15,15" Grid.Column="1" Click="Download"
                    Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Center">
                <Button.Content>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.CloudDownload}" FontSize="18" />
                </Button.Content>
            </Button>
        </Grid>
    </Border>
</UserControl>