<UserControl x:Class="MCServerLauncher.WPF.View.Components.DaemonManager.NewDaemonConnectionInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCServerLauncher.WPF.View.Components.DaemonManager"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:i18n="clr-namespace:MCServerLauncher.WPF.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="0,0,0,5"  VerticalAlignment="Center" Style="{StaticResource CaptionTextBlock}" Text="URL" />
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Column="0" x:Name="WebSocketScheme" Margin="0,0,5,0" VerticalAlignment="Center" SelectedIndex="0">
                <ComboBoxItem Content="ws://"/>
                <ComboBoxItem Content="wss://"/>
            </ComboBox>
            <TextBox Grid.Column="1" ui:ControlHelper.PlaceholderText="{Binding [DaemonWsAddress], Source={x:Static i18n:LanguageManager.Localize}}" x:Name="wsEdit" MaxLines="1" />
            <TextBlock Grid.Column="2" Text=":" Margin="2,0,5,0" VerticalAlignment="Center" Style="{StaticResource MinititleTextBlock}" />
            <TextBox Grid.Column="3" ui:ControlHelper.PlaceholderText="{Binding [Port], Source={x:Static i18n:LanguageManager.Localize}}" x:Name="portEdit" MaxLines="1" />
        </Grid>
        <TextBlock Grid.Row="2" Margin="0,5,5,5" VerticalAlignment="Center" Style="{StaticResource CaptionTextBlock}" Text="{Binding [Token], Source={x:Static i18n:LanguageManager.Localize}}" />
        <PasswordBox Grid.Row="3" ui:ControlHelper.PlaceholderText="{Binding [Token], Source={x:Static i18n:LanguageManager.Localize}}" x:Name="tokenEdit" />
        <TextBlock Grid.Row="4" Margin="0,5,5,5" VerticalAlignment="Center" Style="{StaticResource CaptionTextBlock}" Text="{Binding [DaemonFriendlyName], Source={x:Static i18n:LanguageManager.Localize}}" />
        <TextBox Grid.Row="5" ui:ControlHelper.PlaceholderText="{Binding [DaemonFriendlyName], Source={x:Static i18n:LanguageManager.Localize}}" x:Name="friendlyNameEdit" Margin="0,0,0,5" MaxLines="1" />

    </Grid>
</UserControl>
